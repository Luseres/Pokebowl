<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokebowlgo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name=".MakeBowlOne"  android:screenOrientation="portrait" />
        <activity  android:name=".MakeBowlTwo"  android:screenOrientation="portrait" />
        <activity  android:name=".MakeBowlThree"  android:screenOrientation="portrait" />
        <activity  android:name=".MakeBowlFour"  android:screenOrientation="portrait" />
        <activity  android:name=".MakeBowlFive"  android:screenOrientation="portrait" />
        <activity  android:name=".MakeBowlSix"  android:screenOrientation="portrait" />
        <activity  android:name=".AddressForm"  android:screenOrientation="portrait" />
        <activity  android:name=".CreditcardPayment"  android:screenOrientation="portrait" />
        <activity  android:name=".OrderOverview"  android:screenOrientation="portrait" />
        <activity  android:name=".PaymentMethod"  android:screenOrientation="portrait" />
        <activity  android:name=".SelectedIngredients"  android:screenOrientation="portrait" />
        <activity  android:name=".TermsOfService"  android:screenOrientation="portrait" />
        <activity  android:name=".WhatIsPoke"  android:screenOrientation="portrait" />
    </application>

</manifest>